  },
  "homepage": "https://github.com/Trail3lazer/Books-MERN#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "if-env": "^1.0.4",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.5"
  }
}
